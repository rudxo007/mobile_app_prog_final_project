<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.minchanp.final_project.MapActivity"
    android:background="#fffcf9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#b9ff0200"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지 도"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="28dp"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="수도권"
                android:id="@+id/m1"
                android:background="@drawable/m1"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="map"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강원도"
                android:id="@+id/m2"
                android:background="@drawable/m5"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:onClick="map"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="28dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:text="충청도"
                        android:id="@+id/m3"
                        android:background="@drawable/m2"
                        android:textSize="15dp"
                        android:onClick="map"/>

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:text="전라도"
                        android:id="@+id/m4"
                        android:background="@drawable/m3"
                        android:textSize="15dp"
                        android:onClick="map"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="278dp"
                android:layout_weight="0.73">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경상도"
                    android:id="@+id/m5"
                    android:background="@drawable/m4"
                    android:textSize="15dp"
                    android:onClick="map"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*지도 클릭시 해당 지역의 여행지가 소개 됩니다."
            android:id="@+id/textView12"
            android:textColor="#000000"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
